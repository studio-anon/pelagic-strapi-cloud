{
  "kind": "collectionType",
  "collectionName": "journal_articles",
  "info": {
    "singularName": "journal-article",
    "pluralName": "journal-articles",
    "displayName": "Journal Article",
    "description": "Journal articles with rich body blocks"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "articleTitle",
      "required": true
    },
    "listingDate": { "type": "date" },
    "listingTitle": { "type": "string" },
    "listingShortDescription": { "type": "text" },
    "listingThumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "articleTitle": {
      "type": "string",
      "required": true
    },
    "articleIntroduction": { "type": "text" },
    "readingTimeMinutes": { "type": "integer" },
    "isExternal": { "type": "boolean", "default": false },
    "externalUrl": { "type": "string" },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.media-block",
        "shared.rich-text",
        "shared.image-text",
        "shared.image-pair",
        "shared.video-block"
      ]
    }
  }
}

