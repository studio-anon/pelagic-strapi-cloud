{
  "kind": "collectionType",
  "collectionName": "journal_articles",
  "info": {
    "singularName": "journal-article",
    "pluralName": "journal-articles",
    "displayName": "Journal Article",
    "description": "Journal articles with rich body blocks"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "article_title",
      "required": true
    },
    "listing_date": {
      "type": "date"
    },
    "listing_title": {
      "type": "string"
    },
    "listing_short_description": {
      "type": "text"
    },
    "listing_thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "article_title": {
      "type": "string",
      "required": true
    },
    "article_introduction": {
      "type": "text"
    },
    "reading_time_minutes": {
      "type": "integer"
    },
    "is_external": {
      "type": "boolean",
      "default": false
    },
    "external_url": {
      "type": "string"
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "shared.media-block",
        "shared.rich-text",
        "shared.image-text",
        "shared.image-pair",
        "shared.video-block"
      ]
    }
  }
}

